<?xml version="1.0" encoding="UTF-8"?>
<Context path="/">
    <Resource   name="jdbc/glossary"
                auth="Container"
                type="javax.sql.DataSource"
                minIdle="100"
                maxIdle="500"
                username="{{username}}"
                password="{{password}}"
                driverClassName="org.mariadb.jdbc.Driver"
                url="jdbc:mysql://{{ip}}:{{port}}:{{servicename}}"/>
</Context>
